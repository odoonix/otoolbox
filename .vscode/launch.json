{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "databaseName",
            "type": "command",
            "command": "extension.commandvariable.number",
            "args": {
                "name": "databaseName",
                "range": [
                    1500,
                    60000000
                ],
                "random": true,
                "uniqueCount": 10
            }
        },
        {
            "id": "modulesTest",
            "type": "pickString",
            "description": "List of Module to test, leave empty for all module",
            "options": [
                "web",
            ],
            "default": "web"
        }
    ],
    "configurations": [
        //---------------------------------------------------------------------------
        // Run the project
        // This one is used to run the whole application. You can install, update and
        // launch any of them.
        //---------------------------------------------------------------------------
        {
            "name": "Odoo Run",
            "type": "python",
            "request": "launch",
            "program": "${config:odoo.bin}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--db_host",
                "localhost",
                "--db_password",
                "odoo",
                "--db_user",
                "odoo",
                "--database",
                "odoo17-main",
                "--addons-path",
                "${config:odoo.addons.path}",
                "--update",
                "web",
                "--dev",
                "all"
            ]
        },
        //----------------------------------------------------------------------------
        // Test Projects
        //
        // This one is used to test the whole application. No online application, just
        // run tests. Add vw tag to all test from our company.
        //----------------------------------------------------------------------------
        {
            "name": "Odoo Test",
            "type": "python",
            "request": "launch",
            "program": "${config:odoo.bin}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--db_host",
                "localhost",
                "--db_password",
                "odoo",
                "--db_user",
                "odoo",
                "--database",
                "odooiottest${input:databaseName}",
                "--addons-path",
                "${config:odoo.addons.path}",
                "--init",
                "${input:modulesTest}",
                "--test-tag",
                "vw",
                "--stop-after-init"
            ]
        }
    ]
}