{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "databaseName",
            "type": "command",
            "command": "extension.commandvariable.number",
            "args": {
                "name": "databaseName",
                "range": [
                    1500,
                    60000000
                ],
                "random": true,
                "uniqueCount": 10
            }
        }
    ],
    "configurations": [
        //---------------------------------------------------------------------------
        // Run the project
        // This one is used to run the whole application. You can install, update and
        // launch any of them.
        //---------------------------------------------------------------------------
        {
            "name": "odoo16-run",
            "type": "python",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/../odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--db_host",
                "localhost",
                "--db_password",
                "odoo",
                "--db_user",
                "odoo",
                "--database",
                "odoo16-main",
                "--addons-path",
                "${fileWorkspaceFolder}/../odoo/addons,${fileWorkspaceFolder}/../CybroAddons,${fileWorkspaceFolder}/../odoo-exchange,${fileWorkspaceFolder}/../odoo-viraweb123,${fileWorkspaceFolder}/../odoo-mobile-service,${fileWorkspaceFolder}/../sale-workflow,${fileWorkspaceFolder}/../iot,${fileWorkspaceFolder}/../odoo-beton,${fileWorkspaceFolder}/../trip2persia,${fileWorkspaceFolder}/../account-reconcile,${fileWorkspaceFolder}/../bank-statement-import",
                "--load",
                "vw_odooo_patch",
                "--update",
                "vw-calendar",
                "--dev",
                "all"
            ]
        },
        //----------------------------------------------------------------------------
        // Update all
        //----------------------------------------------------------------------------
        {
            "name": "odoo16-update:all",
            "type": "python",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/../odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--db_host",
                "localhost",
                "--db_password",
                "odoo",
                "--db_user",
                "odoo",
                "--database",
                "odoo16-main",
                "--addons-path",
                "${fileWorkspaceFolder}/../odoo/addons,${fileWorkspaceFolder}/../CybroAddons,${fileWorkspaceFolder}/../odoo-exchange,${fileWorkspaceFolder}/../odoo-viraweb123,${fileWorkspaceFolder}/../odoo-mobile-service,${fileWorkspaceFolder}/../sale-workflow,${fileWorkspaceFolder}/../iot,${fileWorkspaceFolder}/../odoo-beton,${fileWorkspaceFolder}/../trip2persia,${fileWorkspaceFolder}/../account-reconcile,${fileWorkspaceFolder}/../bank-statement-import",
                "--update",
                "all",
                "--load-language",
                "fa_IR",
                "--stop-after-init"
            ]
        },
        //----------------------------------------------------------------------------
        // Test Projects
        //
        // This one is used to test the whole application. No online application, just
        // run tests. Add vw tag to all test from our company.
        //----------------------------------------------------------------------------
        {
            "name": "odoo16-test:odoo-viraweb123",
            "type": "python",
            "request": "launch",
            "program": "${fileWorkspaceFolder}/../odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--db_host",
                "localhost",
                "--db_password",
                "odoo",
                "--db_user",
                "odoo",
                "--database",
                "odooiottest${input:databaseName}",
                "--addons-path",
                "${fileWorkspaceFolder}/../odoo/addons,${fileWorkspaceFolder}/../CybroAddons,${fileWorkspaceFolder}/../odoo-exchange,${fileWorkspaceFolder}/../odoo-viraweb123,${fileWorkspaceFolder}/../odoo-mobile-service,${fileWorkspaceFolder}/../sale-workflow,${fileWorkspaceFolder}/../iot,${fileWorkspaceFolder}/../odoo-beton,${fileWorkspaceFolder}/../trip2persia,${fileWorkspaceFolder}/../account-reconcile,${fileWorkspaceFolder}/../bank-statement-import",
                "--init",
                "vw_sms_authentication",
                "--test-tag",
                "vw",
                "--stop-after-init"
            ]
        },

    ]
}