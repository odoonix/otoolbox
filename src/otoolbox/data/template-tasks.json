{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Workspace Update",
            "type": "shell",
            "command": "${workspaceFolder}/init-vs",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Workspace to Template",
            "type": "shell",
            "command": "${workspaceFolder}/utils/mt-vs",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}",
            }
        }
    ]
}